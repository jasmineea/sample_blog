<% if @post.errors.any? %>
<h2>The post didn't save.</h2>
<% end %>

<div class="row">
 <div class="col">
  <%= form_for(@post, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :title %>
   </div>
   <div class="col">
    <%= f.text_field :name, class: "form-control", placeholder: "Title of post", autofocus: true %>
   </div>
  </div>
  <div class="form-group">
   <div class="control-label col-sm-2">
    <%= f.label :description %>
   </div>
   <div class="col">
    <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of post" %>
   </div>
  </div>
  <div class="form-group">
   <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit class: 'btn btn-primary btn-large' %>
   </div>
  </div><% end %>
 </div>
</div>