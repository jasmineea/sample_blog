<div class="text-center">
<h1>Listing all posts</h1><% @posts.each do |post| %>
 <div class="row">
  <div class="col">
   <div class="well well-lg">
    <div class="article-title">
     <%= link_to post.name, post_path(post) %>
    </div>
    <div class="article-body">
     <%= truncate(post.description, length: 100) %>
    </div>
    <div class="article-actions">
     <%= link_to "Edit", edit_post_path(post), class: "btn btn-xs btn-primary" %>
     <%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure you want to delete this article?"}, class: "btn btn-xs btn-danger" %>
    </div>
   </div>
  </div>
 </div>
<% end %>
</div>
<br>
<p>Create a <%= link_to 'new', new_post_path %> post.</p>